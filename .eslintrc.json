{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"env": {
		"browser": false,
		"node": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"noconsole": [
			"warn",
			"noconsole"
		],
		"indent": [
			"warn",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"error",
			"always"
		]
	}
}